{
  "type": "page",
  "body": {
    "label": "点击弹框",
    "type": "button",
    "actionType": "dialog",
    "dialog": {
      "title": "登陆",
      "closeOnEsc": true,
      "actions": [
        {
          "label": "取消",
          "actionType": "close",
          "type": "button"
        },
        {
          "label": "确认",
          "actionType": "confirm",
          "type": "button",
          "level": "primary"
        }
      ],
      "body": {
        "type": "form",
        "api": "https://houtai.baidu.com/api/mock2/form/saveForm?waitSeconds=1",
        "mode": "normal",
        "controls": [
          {
            "type": "text",
            "name": "userName",
            "required": true,
            "placeholder": "请输入用户名",
            "label": "用户名"
          },
          {
            "type": "password",
            "name": "password",
            "label": "密码",
            "required": true,
            "placeholder": "请输入密码"
          },
          {
            "type": "checkbox",
            "name": "rememberMe",
            "label": "记住登录"
          }
        ]
      }
    }
  }
}